---
import Layout from '~/layouts/PageLayout.astro';
import Hero from '~/components/widgets/Hero.astro';
import InfoCard from '~/components/widgets/InfoCard.astro';
import FeaturedArticles from '~/components/widgets/FeaturedArticles.astro';

const metadata = {
  title: 'Water Heaters',
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    image={{
      src: 'https://github.com/Anthonypaige/investnurenergy/blob/main/public/images/hero-art/WTR-hero-image.png?raw=true',
      alt: 'Hot Shower Water',
    }}
  />

  <InfoCard
  title="Water Heater Options Covered in the Inflation Reduction Act"
  subtitle="Choose the best for your needs"
  cards={[
    {
      title: 'Heat Pump Water Heaters',
      taxCode: '25C',
      creditAmount: '30% up to $600',
      verifiedEnergySavings: '40% more efficient',
      callToAction: {
        target: '_blank',
        text: 'Read the Article',
        href: '#', // Link to the article
      },
    },
    {
      title: 'Tankless Water Heaters',
      taxCode: '25C',
      creditAmount: '30% up to $600',
      verifiedEnergySavings: '30% more efficient',
      callToAction: {
        target: '_blank',
        text: 'Read the Article',
        href: '#', 
      },
    },
    {
      title: 'Solar Water Heaters',
      taxCode: '25D',
      creditAmount: '30% of the cost',
      verifiedEnergySavings: '50%-80% depending on area',
      callToAction: {
        target: '_blank',
        text: 'Read the Article',
        href: '#', 
      },
    }
  ]}
/>

<!-- Water Heaters (WTR) Featured Articles Widget -->
<FeaturedArticles 
  title="Featured Articles on Water Heaters" 
  articleSlugs={['federal-water-heater-tax-incentives', 'overview-solar-water-heaters', 'heat-pump-water-heaters', 'tankless-water-heaters']} 
/>

</Layout>
