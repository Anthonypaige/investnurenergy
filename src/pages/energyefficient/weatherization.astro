---
import Layout from '~/layouts/PageLayout.astro';
import JumboTron from '~/components/widgets/JumboTronRightLow.astro';
import Stats from '~/components/widgets/Stats.astro';
import FeaturedArticles from '~/components/widgets/FeaturedArticles.astro';
import WeatherizationNote from '~/components/widgets/WeatherizationNote.astro';


const metadata = {
  title: 'Weatherize',
};
---

<Layout metadata={metadata}>

  <JumboTron 
  id="weatherization"
  titleWords={["Weatherization",]}
  coloredWordIndex={0}
  coloredWordColor="text-green-700"

  content="Tax code 25C"
  image="https://github.com/Anthonypaige/investnurenergy/blob/main/public/images/page-art/WTHR-page-art.jpeg?raw=true"
  titleAlignment="right"

/>

  <WeatherizationNote />
   
  <!-- Stats Widget **************** -->
  <Stats
  title="Weatherization"
  stats={[
    { title: 'Tax Code', amount: '25C' },
    { title: 'Tax Credit', amount: '30%' },
    { title: 'Annual Limit', amount: '$1,200' },
    { title: 'Energy Savings', amount: '20%' },
  ]}
/>

 <!--Featured Articles Widget -->
 <FeaturedArticles 
 title="Featured Articles" 
 articleSlugs={[
   'a-comprehensive-guide-to-weatherization-and-energy-efficiency',
   'easy-diy-insulation-kits-for-home-efficiency',
   'foam-spray-insulation-buying-guide',
   'crafting-an-energy-efficient-strategy',
 ]}  
/>

</Layout>
