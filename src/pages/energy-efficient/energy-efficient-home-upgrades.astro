---
import Layout from '~/layouts/PageLayout.astro';
import Hero from '~/components/widgets/Hero.astro';
import Features2 from '~/components/widgets/Features2.astro';
import EnergyEfficientHomeNote from '~/components/notes/EnergyEfficientHomeNote.astro';
import Stats from '~/components/widgets/Stats.astro';
import FeaturedArticles from '~/components/widgets/FeaturedArticles.astro';
import FAQs from '~/components/widgets/FAQs.astro';



const metadata = {
  title: 'Energy Efficient Home Upgrades',
  description: 'Explore the benefits of the Energy Efficient Home Improvement Credit for your home upgrades. Learn how to enhance your living space with eligible improvements like heat pumps and energy efficient water heaters, while taking advantage of significant tax credits.',
  keywords: 'Energy Efficient Home Upgrades, Energy Efficient Home Improvement Credit, home energy tax credits, heat pumps, biomass boilers',
  canonical: 'https://investinyourenergy.com/energy-efficient/energy-efficient-home-upgrades'
};

---

  <Layout metadata={metadata}>


    <Hero actions={[]} videoSrc="/images/energy-efficient-home-upgrades-video.mp4">
      <Fragment slot="title">
        <div class="text-center text-3xl sm:text-3xl md:text-4xl lg:text-5xl font-bold leading-tight tracking-tighter mb-4 font-heading" >
            <div> <span class="text-green-600">Energy</span> Efficient Home Upgrades </div>
          </div>
      </Fragment>
    </Hero> 
    

  <EnergyEfficientHomeNote />

 <!-- Stats Widget ************** -->

 <Stats
 title="Energy Efficient Home Improvement Credit"
 stats={[
   { title: 'Tax Code', amount: '25C' },
   { title: 'Tax Credit', amount: '30%' },
   { title: 'Annual Limit', amount: '$3200' },
 ]}
/>

  <!-- Features2 Widget **************-->
<Features2
title="Most Efficient Home Improvements"
items={[
  {
    title: 'Heat Pumps',
    description: 'Switch to heat pumps for a dual heating and cooling solution that can significantly lower your energy consumption.',
    icon: 'tabler:air-conditioning',  
    limit: 'Up to $2,000',
  },
  {
    title: 'Heat Pump Water Heaters',
    description: 'Invest in heat pump water heaters to achieve hot water efficiency and reduce your monthly utility expenses.',
    icon: 'tabler:droplet-filled', 
    limit: 'Up to $2,000',
  },
  {
    title: 'Biomass Boilers',
    description: 'Opt for biomass boilers that utilize renewable fuels, reducing both your carbon footprint and energy costs.',
    limit: 'Up to $2,000',
    icon: 'tabler:campfire', 
  },
  {
    title: 'Weatherization Items',
    description: 'Enhance your homeâ€™s insulation and seal leaks to optimize indoor temperature and reduce energy waste.',
    limit: 'Up to $1,200',
    icon: 'tabler:home-heart', 
  },
  {
    title: 'Electrical Panel Upgrade',
    description: 'Modernize your electrical panel to accommodate energy-efficient appliances and improve electrical safety.',
    limit: 'Up to $600',
    icon: 'tabler:bulb', 
  },
  {
    title: 'Tankless Water Heaters',
    description: 'Adopt tankless water heaters for on-demand hot water, minimizing energy usage and maximizing convenience.',
    limit: 'Up to $600',
    icon: 'tabler:droplet',  
  },
  {
    title: 'Windows and Skylights',
    description: 'Install energy-efficient windows and skylights to enhance natural lighting and thermal insulation.',
    limit: 'Up to $600',
    icon: 'tabler:window', 
  },
  {
    title: 'Exterior Doors',
    description: 'Upgrade to energy-efficient exterior doors to bolster thermal insulation and enhance security.',
