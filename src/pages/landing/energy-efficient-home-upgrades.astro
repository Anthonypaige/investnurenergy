---
import Layout from '~/layouts/PageLayout.astro';
import Hero from '~/components/widgets/Hero.astro';
import Features2 from '~/components/widgets/Features2.astro';
import Stats from '~/components/widgets/Stats.astro';
import FeaturedArticles from '~/components/widgets/FeaturedArticles.astro';
import FAQs from '~/components/widgets/FAQs.astro';

const metadata = {
  title: 'Energy Efficient Home Upgrades',
};
---

<Layout metadata={metadata}>
    <Fragment slot="head">
    <script src="https://embed.rewiringamerica.org/calculator.js"></script>
    <link rel="stylesheet" type="text/css" href="https://embed.rewiringamerica.org/rewiring-fonts.css"/>
    </Fragment>

  <!-- Hero Widget ******************* -->
  <Hero actions={[]}>
    <Fragment slot="title">
      <div style="font-size: 1em; font-weight: bold; margin-bottom: 8px;">The <span style="color:#228B22; font-weight: 700;">Energy</span> Efficient Home Improvement Credit</div>
    </Fragment>
    <Fragment slot="subtitle">
      In a world where every penny counts and sustainability is key, the Energy Efficient Home Improvement Credit (25C) offers a pathway to smarter, greener living.
    </Fragment>
  </Hero>

 
 <!-- Features2 Widget ************** -->
<Features2
title="What is included in the Energy Efficient Home Improvement Credit?"
subtitle="Discover the range of improvements eligible for tax credits under Section 25C."
items={[
  {
    title: 'Heat Pumps',
    description: 'Switch to heat pumps for a dual heating and cooling solution that can significantly lower your energy consumption.',
    limit: 'Up to $2,000',
  },
  {
    title: 'Heat Pump Water Heaters',
    description: 'Invest in heat pump water heaters to achieve hot water efficiency and reduce your monthly utility expenses.',
    limit: 'Up to $2,000',
  },
  {
    title: 'Biomass Boilers',
    description: 'Opt for biomass boilers that utilize renewable fuels, reducing both your carbon footprint and energy costs.',
    limit: 'Up to $2,000',
  },
  {
    title: 'Weatherization Items',
    description: 'Enhance your homeâ€™s insulation and seal leaks to optimize indoor temperature and reduce energy waste.',
    limit: 'Up to $1,200',
  },
  {
    title: 'Electrical Panel Upgrade',
    description: 'Modernize your electrical panel to accommodate energy-efficient appliances and improve electrical safety.',
    limit: 'Up to $600',
  },
  {
    title: 'Tankless Water Heaters',
    description: 'Adopt tankless water heaters for on-demand hot water, minimizing energy usage and maximizing convenience.',
    limit: 'Up to $600',
  },
  {
    title: 'Windows and Skylights',
    description: 'Install energy-efficient windows and skylights to enhance natural lighting and thermal insulation.',
    limit: 'Up to $600',
  },
  {
    title: 'Exterior Doors',
    description: 'Upgrade to energy-efficient exterior doors to bolster thermal insulation and enhance security.',
    limit: 'Up to $500',
  },
  {
    title: 'Home Energy Audit',
    description: 'Conduct a home energy audit to identify areas for improvement and create a roadmap for energy-efficient upgrades.',
    limit: 'Up to $150',
  }, 
]}
>
<Fragment slot="bg">
  <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
</Fragment>
</Features2>


  <!-- Featured Articles Widget ******************* -->
  
  <FeaturedArticles 
  title="Featured Articles" 
  articleSlugs={[
    'what-is-the-energy-efficient-home-improvement-credit',
    'crafting-an-energy-efficient-strategy',
    'biomass-boilers-explained',
    'iot-is-fueling-smart-energy-devices',
    'whats-a-heat-pump-and-why-do-i-need-to-know',
    'heat-pump-water-heaters-are-the-model-of-efficiency',
    'a-comprehensive-guide-to-weatherization-and-energy-efficiency',
    'whats-a-ductless-mini-split-heat-pump',

  ]}  
/>


 <!-- Stats Widget ************** -->

 <Stats
 title="Energy Efficient Home Improvement Credit"
 stats={[
   { title: 'Tax Code', amount: '25C' },
