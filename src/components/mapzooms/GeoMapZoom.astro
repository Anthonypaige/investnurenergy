<style>
  .map-container {
    text-align: center;
    margin: 20px;
  }
  .map-title {
    font-size: 38px;
    font-weight: bold;
    margin-bottom: 16px; /* Adds space below the title */
  }
  .map-subtitle {
    font-size: 24px;
    margin-bottom: 16px;
    max-width: 60%; /* Constrain the maximum width */
    margin-left: auto; /* Center the subtitle */
    margin-right: auto; /* Center the subtitle */
    text-align: center; /* Ensures text is centered within the div */
  }
  @media (max-width: 768px) {
    .map-subtitle {
      font-size: 18px; /* Smaller font size on smaller screens */
      max-width: 80%; /* Wider max-width for better line distribution */
    }
  }
  .map-image {
    max-width: 50%;
    max-height: 50%;
    cursor: zoom-in;
    margin: auto;  /* Center the image */
    transition: transform 0.3s ease; /* Add transition */
  }
  .map-image:hover {
    transform: scale(1.5); /* Add hover effect */
  }
  .credit {
    font-size: 24px;  
    font-weight: bold;  
    margin-top: 30px;
    text-align: center; 
  }
  .credit a {
    margin-left: 5px;
    text-decoration: underline;
    transition: color 0.3s ease;
  }
  .credit a:hover {
    color: #228B22; /* Change to whatever color you prefer */
  }
</style>

