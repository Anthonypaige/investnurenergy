---
import Layout from '~/layouts/PageLayout.astro';
import SmartEnergyDeviceNote from '~/components/widgets/SmartEnergyDeviceNote.astro';
import Hero from '~/components/widgets/Hero.astro';
import Features3 from '~/components/widgets/Features3.astro';
import FeaturedArticles from '~/components/widgets/FeaturedArticles.astro';

const metadata = {
  title: 'Smart Energy Devices',
};
---
<Layout metadata={metadata}>
  <Hero actions={[]} videoSrc="/images/smart-home-video.mp4">
    <Fragment slot="title">
      <div class="text-center text-3xl sm:text-4xl md:text-5xl lg:text-6xl font-bold leading-tight tracking-tighter mb-4 font-heading">
        <div class="inline-block text-right">
          <div>Smart <span class="text-green-600">Energy</span> Devices</div>
        </div>
      </div>
    </Fragment>
  </Hero>
  

  <SmartEnergyDeviceNote />



  <Features3
  id="features"
  title="Elevate Your Home with Smart Energy Control"
  subtitle="Embrace the convenience of modern living by taking command of your energy usage with intuitive, cutting-edge smart devices designed for efficiency."
  tagline="Smart, Connected, Controlled"
  columns={3}
  items={[
    {
      title: 'Smart Thermostats',
      description: 'Experience personalized comfort and energy savings with smart thermostats that learn your habits and adjust temperatures automatically.',
      icon: 'tabler:temperature-plus',
    },
    {
      title: 'Home Energy Monitoring Systems',
      description: 'Monitor your energy usage with precision and uncover opportunities to save costs and reduce your environmental impact with real-time data.',
      icon: 'tabler:device-analytics',
    },
    {
      title: 'Smart Lighting',
      description: 'Create the perfect ambiance while saving energy with smart lighting that adjust to your lifestyle and set the mood at the touch of a button.',
      icon: 'tabler:bulb',
    },
    {
      title: 'Smart Plugs',
      description: 'Convert any appliance into a smart device with smart plugs, offering you the ability to switch off remotely and track energy usage for each outlet.',
      icon: 'tabler:plug',
    },
    {
      title: 'Smart Circuit Breakers',
      description: 'Optimize your homes energy distribution with smart circuit breakers that allow for sophisticated control and load shifting',
      icon: 'tabler:home',
    },
    {
      title: 'Smart Switches',
      description: 'Smart switches integrate seamlessly with your smart home ecosystem for ultimate control over your electrical fixtures.',
      icon: 'tabler:home',
    },
  ]}
  image={{
    src: 'https://github.com/Anthonypaige/investnurenergy/blob/main/public/images/page-art/smart-energy-device-page-art.png?raw=true',
    alt: 'Smart Home Energy Devices',
  }}
/>





  <!-- Featured Articles Widget ******************* -->
  <FeaturedArticles 
    title="Featured Articles" 
    articleSlugs={[
      'iot-is-fueling-smart-energy-devices',
      'home-energy-monitoring-your-guide-to-energy-efficiency',
      'emporias-home-energy-monitoring-systems',
      'senses-home-energy-monitoring-system-driven-by-machine-learning',
      'smart-thermostat-shopping-guide-what-you-need-to-know',
      'ecobee-smart-thermostats-buying-guide',
      'your-comprehensive-google-nest-buying-guide',
    ]}
  />
</Layout>
