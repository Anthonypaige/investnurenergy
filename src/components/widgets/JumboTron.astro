---
import Button from '~/components/ui/Button.astro';
import type { CallToAction } from '~/types';

export interface Props {
  id?: string;
  title?: string;
  subtitle?: string;
  content?: string;
  actions?: string | CallToAction[];
  image?: string;
  titleWords?: string[];
  coloredWordIndex?: number;
  coloredWordColor?: string;
  textColor?: string;
  titleAlignment?: 'left' | 'center' | 'right';
}

const { id, subtitle, content, actions, image, titleWords, coloredWordIndex, coloredWordColor, textColor, titleAlignment } = Astro.props;

---

<section class="relative md:-mt-[76px] not-prose" {...id ? { id } : {}}>
  <!-- Jumbotron -->
  <div class="relative overflow-hidden bg-cover bg-no-repeat" style={`background-position: 50%; background-image: url('${image}'); height: 500px;`}>
    <div class="flex h-full items-center justify-center">
      <div class={`text-center mx-auto ${textColor}`}>
        <div class={`text-${titleAlignment} mx-auto ${textColor}`}>
          <h1 class={`mt-2 mb-2 text-5xl font-bold tracking-tight md:text-6xl xl:text-7xl ${textColor}`}>
            {titleWords && titleWords.map((word, index) => (
              <span class={coloredWordIndex === null || index === coloredWordIndex ? coloredWordColor : ''}>{word} </span>
            ))}
          </h1>
        <h2 class="mb-16 text-5xl font-bold tracking-tight md:text-6xl xl:text-7xl">
          {subtitle}
        </h2>
        <button type="button" class="rounded-full bg-blue-800 text-white px-6 py-2 text-sm font-medium uppercase transition duration-150 ease-in-out hover:bg-blue-900 focus:bg-blue-600 focus:outline-none focus:ring-0 active:bg-blue-700">
          {content}
        </button>
      </div>
    </div>
  </div>
  
  <!-- Additional Content -->
  <div class="max-w-3xl mx-auto">
    {actions && (
      <div class="max-w-xs sm:max-w-md m-auto flex flex-nowrap flex-col sm:flex-row sm:justify-center gap-4">
        {Array.isArray(actions) ? (
          actions.map((action) => (
            <div class="flex w-full sm:w-auto">
              <Button {...(action || {})} class="w-full sm:mb-0" />
            </div>
          ))
        ) : (
          <Fragment set:html={actions} />
        )}
      </div>
    )}
  </div>
</section>
