---
// Import the necessary components and types
import type { Card as CardType } from '~/types';
import WidgetWrapper from '~/components/ui/WidgetWrapper.astro';
import Button from '~/components/ui/Button.astro';

// Props passed to this component
const {
  cards = [], // This will be an array of CardType
  title = 'Featured Products' // You can set a default or pass this as a prop
} = Astro.props;
---

<WidgetWrapper>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <h2 class="text-2xl font-extrabold tracking-tight text-gray-900">{title}</h2>
    <div class="mt-6 grid grid-cols-1 gap-y-10 gap-x-6 sm:grid-cols-2 lg:grid-cols-3 xl:gap-x-8">
      {cards.map((card: CardType) => (
        <div class="group relative">
          <div class="w-full min-h-80 bg-gray-200 aspect-w-1 aspect-h-1 rounded-md overflow-hidden group-hover:opacity-75 lg:h-80 lg:aspect-none">
            <img
              src={card.imageSrc}
              alt={card.title}
              class="w-full h-full object-center object-cover lg:w-full lg:h-full"
            />
          </div>
          <div class="mt-4 flex justify-between">
            <div>
              <h3 class="text-sm text-gray-700">
                <a href={card.shopButton.href}>
                  <span aria-hidden="true" class="absolute inset-0"></span>
                  {card.title}
                </a>
              </h3>
              <p class="mt-1 text-sm text-gray-500">{card.topSellingPoints.join(', ')}</p>
            </div>
            <p class="text-sm font-medium text-gray-900">{card.avgPrice}</p>
          </div>
          {card.callToAction && (
            <Button href={card.callToAction.href} class="mt-6">
              {card.callToAction.text}
            </Button>
          )}
        </div>
      ))}
    </div>
  </div>
</WidgetWrapper>
