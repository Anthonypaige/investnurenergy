---
import Layout from '~/layouts/PageLayout.astro';
import FeaturedArticles from '~/components/widgets/FeaturedArticles.astro';
import Hero from '~/components/widgets/Hero.astro';
import MainPageNote from '~/components/notes/MainPageNote.astro';
import Features3 from '~/components/widgets/Features3.astro';
import Stats from '~/components/widgets/Stats.astro';
import FeaturesLink from '~/components/widgets/FeaturesLink.astro';
import FAQs from '~/components/widgets/FAQs.astro';


const metadata = {
  title: 'Invest in your Energy',
  ignoreTitleTemplate: true,
  description: 'Our platform serves as a one-stop shop for those looking to invest in their homes energy potential.',
  imageUrl: 'https://github.com/Anthonypaige/investnurenergy/blob/main/public/images/page-sharing-logos/main-page-sharing-logo.png?raw=true',
};

---


<Layout metadata={metadata}>
  <Fragment slot="head">
  <script src="https://embed.rewiringamerica.org/calculator.js"></script>
  <link rel="stylesheet" type="text/css" href="https://embed.rewiringamerica.org/rewiring-fonts.css"/>
  </Fragment>

  <Hero actions={[]}>
    <Fragment slot="title">
      <div style="font-size: 1em; font-weight: bold; margin-bottom: 8px;">Welcome to <span style="color:#228B22; font-weight: 700;">Invest</span> in your <span style="color:#228B22; font-weight: 700;">Energy</span></div>
      </Fragment>
  
    <Fragment slot="subtitle">
      Our platform serves as a one-stop shop for those looking to invest in their homes energy potential.
    </Fragment>
  </Hero>

 <MainPageNote />

  <Features3
  id="inflation-reduction-roadmap"
  title="Your Energy Efficiency Roadmap"
  tagline='Navigating the IRA'
  subtitle="Discover how the Inflation Reduction Act can be your guide to a more energy efficient and grid independent home."


  columns={2}
  items={[
    {
      title: 'Federal Tax Credits',
      description: 'Maximize savings with federal tax credits available under the IRA for qualifying energy-efficient home improvements and renewable energy installations.',
      icon: 'tabler:receipt-tax',
    },
    {
      title: 'State-Level Rebates',
      description: 'Take advantage of state-specific rebates and incentives for energy-efficient upgrades and renewable energy systems, complementing federal tax credits.',
      icon: 'tabler:receipt-refund',
    },
    {
      title: 'Renewable Energy Solutions',
      description: 'Embrace renewable energy options including solar, wind, geothermal systems, and home energy storage, reducing reliance on traditional power sources .',
      icon: 'tabler:sun-wind',
    },
    {
      title: 'Energy Efficient Appliances',
      description: 'Upgrade to energy-efficient appliances to optimize major energy users like heating, cooling, and water heating for notable utility bill savings.',
      icon: 'tabler:home-eco',
    },
    {
      title: 'Smart Energy Devices',
      description: 'Incorporate IoT-enabled smart energy devices for control over your homes energy consumption, reducing waste and optimizing energy usage.',
      icon: 'tabler:smart-home',
    },
    {
      title: 'Home Insulation & Sealing',
      description: 'Improve your homes insulation and sealing to boost energy efficiency, resulting in significant long-term savings on heating and cooling expenses.',
      icon: 'tabler:cloud-snow',
    },
    
  ]}
  image={{
    src: 'https://github.com/Anthonypaige/investnurenergy/blob/main/public/images/page-art/invest-in-your-energy-page-art.png?raw=true',
    alt: 'The Inflation Reduction Act serving as a roadmap to a more energy independent and efficient home',
  }}
/>
  
  <FeaturesLink
  title="Key Tax Benefits and Incentives"
  subtitle="These dedicated pages will serve as guides for their respective sub-acts."
  columns={3}
  items={[
    {
      title: 'Home Clean Energy Credit',
      description: 'Maximize your savings with the Residential Clean Energy Tax Credit (25D)  your guide to smarter clean energy investments',
      icon: 'tabler:home-bolt',
      link: '/clean-energy/home-clean-energy-credit'
    },
    {
      title: 'Energy-Efficient Home Upgrades',
      description: 'Enhance home efficiency and secure savings through Energy-Efficient Home Upgrade incentives',
      icon: 'tabler:home-eco',
      link: '/energy-efficient/energy-efficient-home-upgrades'
    },
    {
      title: 'Energy-Efficient Rebates',
      description: 'Your Guide to State-Level and HEEHRA Rebate Programs for Energy Efficiency Home Improvements',
      icon: 'tabler:receipt-refund',
      link: '/state-level-rebates/energy-efficient-rebates'
